{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist", // Derleme çıktısını dist/ klasörüne yönlendiriyoruz
        "baseUrl": "./src" // src klasöründen dosya araması yapılacak
    },
    "include": [
        "src/**/*.ts" // src içindeki tüm TypeScript dosyalarını derle
    ]
}
